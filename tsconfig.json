{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "noErrorTruncation": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "important": "error"
        }
      }
    ]
  },
  "exclude": ["**/node_modules/**", "**/build/**"]
}
